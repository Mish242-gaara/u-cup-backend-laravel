# Configuration pour Render.com
# Ce fichier montre les variables d'environnement attendues par Render

# Pour le développement local avec la même base de données que la production:
# DB_CONNECTION=pgsql
# DB_URL=postgres://ucup_user:your_password@dpg-d54i18umcj7e73e0220-a.oregon-postgres.render.com:5432/ucup_db
# DB_SSLMODE=require

APP_NAME="U-Cup Tournament"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://ucup-backend-laravel.onrender.com

# Forcer HTTPS dans l'application
TRUSTED_PROXIES=*
FORCE_HTTPS=true
ASSET_URL=https://ucup-backend-laravel.onrender.com

# Clé d'application - sera générée automatiquement par le Dockerfile
APP_KEY=

# Configuration de la base de données via DATABASE_URL (fournie par Render)
DB_CONNECTION=pgsql
DB_SSLMODE=require  # Obligatoire pour Render PostgreSQL

# La DATABASE_URL est automatiquement fournie par Render et contient:
# postgres://ucup_user:password@dpg-d54i18umcj7e73e0220-a.oregon-postgres.render.com:5432/ucup_db
# Cette variable sera définie par Render, pas besoin de la définir ici
# DATABASE_URL=

# Autres configurations
LOG_CHANNEL=stack
LOG_LEVEL=info

SESSION_DRIVER=database
SESSION_LIFETIME=120

# Configuration du cache pour la production
CACHE_STORE=database
CACHE_PREFIX=ucup_
QUEUE_CONNECTION=database

# CORS pour le frontend
CORS_ALLOWED_ORIGINS=https://u-cup-tournament.vercel.app,http://localhost:3000

# Configuration de session pour la production
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_EXPIRE_ON_CLOSE=false
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=none
SESSION_DOMAIN=.onrender.com

# Configuration CSRF pour HTTPS
SESSION_SECURE_COOKIE=true
CSRF_COOKIE_SECURE=true
CSRF_COOKIE_HTTP_ONLY=true
CSRF_COOKIE_SAME_SITE=none