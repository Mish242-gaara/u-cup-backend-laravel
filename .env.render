# Configuration pour Render.com
# Ce fichier montre les variables d'environnement attendues par Render

APP_NAME=U-Cup Tournament
APP_ENV=production
APP_DEBUG=false
APP_URL=https://ucup-backend-laravel.onrender.com

# Clé d'application - sera générée automatiquement par le Dockerfile
APP_KEY=

# Configuration de la base de données via DATABASE_URL (fournie par Render)
DB_CONNECTION=pgsql
DB_SSLMODE=require  # Obligatoire pour Render PostgreSQL

# La DATABASE_URL est automatiquement fournie par Render et contient:
# postgres://ucup_user:password@dpg-d54i18umcj7e73e0220-a.oregon-postgres.render.com:5432/ucup_db
DATABASE_URL=${{DATABASE_URL}}

# Autres configurations
LOG_CHANNEL=stack
LOG_LEVEL=info

SESSION_DRIVER=database
SESSION_LIFETIME=120

CACHE_STORE=database
QUEUE_CONNECTION=database

# CORS pour le frontend
CORS_ALLOWED_ORIGINS=https://u-cup-tournament.vercel.app,http://localhost:3000